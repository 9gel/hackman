[Unit]
Description=Run hackman door daemon

[Service]
WorkingDirectory=/var/www/hackman/
EnvironmentFile=/etc/hackman.env
Type=oneshot
User=hackman
Group=hackman
ExecStart=/usr/bin/sh -c 'python3 manage.py dumpdata | ssh root@door-backup.lan "cat > $(date --iso).json"'
ExecStart=/bin/sh -c 'gzip -c </var/www/hackman/db/db.sqlite3 | ssh root@door-backup.lan "gzip > $(date -u -Ihour).sqlite.gz"'
Nice=15
IOSchedulingClass=best-effort
IOSchedulingPriority=7
